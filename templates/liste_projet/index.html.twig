{% extends 'layout.html.twig' %}

{% block title %}Hello ListeProjetController!{% endblock %}

{% block body %}
    {% block header %}
        <link rel="stylesheet" href="{{asset("projectList.css")}}">
        <style>
            .nomprojet{
                font-size: 2em;
                font-family: 'Dancing Script', cursive;
                position: center;
                margin: auto;
                text-space: 0.5;
                padding-left: 50em;
                margin-left: 0px;
            }
        </style>
    {% endblock %}

    {% block contenue %}
