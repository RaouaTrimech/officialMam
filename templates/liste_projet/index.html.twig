        {% set i=0 %}
        {% for pro in project %}
            <br>
                {% if (i%2==0) %}
                {#  % if ({{ loop.index }}%2==0) %#}
                    <section class="highlight-projet-paire">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col nom_proj animate__fadeIn">
                                    <p>
                                        <a href="{{ path("project_display") }}">
                                            {{ pro.getNomProjet() }}
                                        </a>
                                    </p>
                                </div>
                                <div class="col-8 animate__fadeIn">
                                    <img src="{{ asset("images/projects/project2.jpg") }}" class="img_project">
                                </div>
                            </div>
                        </div>
                        <br>
                    </section>
                {% else %}
                    <section class="highlight-projet-impaire ">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-8 animate__fadeIn">
                                    <img src="{{ asset("images/projects/project2.jpg") }}" class="img_project">
                                </div>

                                <div class="col nom_proj animate__fadeIn">
                                    <p>
                                        <a href="{{ path("project_display") }}">
                                            {{ pro.getNomProjet() }}
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <br>
                    </section>
                {% endif%}
            {% set i=i+1 %}
        {% endfor %}
    {% endblock %}

{% endblock %}

