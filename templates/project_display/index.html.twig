{% extends 'layout.html.twig' %}

{% block title %}Hello ProjectDisplayController!{% endblock %}


{% block contenue %}

    <section class="container-fluid">
        <div class="row" style="">
            <div class="col-md-6 project_image_animation">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style="margin: 1rem">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="{{ asset("images/projects/project1.jpg") }}" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="{{ asset("images/projects/project2.jpg") }}" class="d-block w-100" alt="...">
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-md-6">
                <div class="accordion accordion-flush" id="accordionFlushExample">
                    <div class="accordion-item" style="padding-top: 20%">

                        <h2 class="accordion-header animate__animated animate__backInRight animate" id="flush-headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                                description projet
                            </button>
                        </h2>
                        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">
                                {{ description}}
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header animate__animated animate__backInRight animate__delay-1s" id="flush-headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                                Produits Utilis√©s
                            </button>
                        </h2>
                        <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                            <div class="accordion-body">


                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <li class="page-item">
                                            <a class="page-link" href="#" aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                        </li>
                                        {% set i=0 %}
                                        {%for prod in prod_util %}
                                            {% if (loop.index ) %3 ==0  %}
                                                {% set i=i+1 %}
                                        <li class="page-item"><a class="page-link" href="{{ path('project_display',{'id':prod ,'page': i}) }}" >{{ i }}</a></li>

                                            {% endif %}
                                        {% endfor %}
                                        <li class="page-item">
                                            <a class="page-link" href="#" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>

                            {% set i=0 %}

                            {% for pr in ProductsParPage %}
                                {% if (loop.index ) %3 ==0  %}
                                    <div class="row">
                                {% endif %}
                                <div class="col-4">
                                    {{ pr }}
                                    {% set i=i+1 %}
                                </div>
                                {% if i ==3 %}
                                    </div>
                                {% set i=0 %}
                                {% endif %}
                                {% else %}
                                vidddddddddddddddde
                            {% endfor %}

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

{% endblock %}
